{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@tests/*": [
        "tests/*"
      ],
      // change to exercises in setup
      "@ex/*": [
        "src/exercises/*"
      ],
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "*.ts",
    "./*.d.ts",
    "src/*.ts",
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/.internal/**/*.ts",
    "src/**/.internal/**/*.vue",
    "server.mjs"
  ],
  "exclude": [
    "src/exercises/*/_start"
  ]
}
