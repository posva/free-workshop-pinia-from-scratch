{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "vue/setup-compiler-macros": true
  },
  "extends": [
    "./.eslintrc-auto-imports.json",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-recommended",
    "standard",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    "promise/param-names": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error"
    ],
    // should probably be on by default...
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": "error",
    // make the workshop easier, it's not mainly about TS
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "vue/require-v-for-key": "off",
    "vue/script-setup-uses-vars": "error",
    "vue/multi-word-component-names": [
      "error",
      {
        "ignores": [
          "index",
          "page",
          "Layout",
          "404",
          "error",
          "default",
          "Example"
        ]
      }
    ],
    "vue/v-slot-style": [
      "warn",
      {
        "default": "v-slot"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "./src/exercises/*/_start/**/*.{ts,vue,md,js}"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-empty-interface": "off",
        // TODO: more precise ban
        "@typescript-eslint/ban-types": "off"
      }
    },
    {
      "files": [
        "*.vue"
      ],
      "rules": {
        // this creates a bug when using multiple scripts
        "import/first": "off"
      }
    }
  ]
}
